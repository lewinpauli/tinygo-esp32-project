{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TinyGo Build",
            "type": "shell",
            "command": "source .env && tinygo build -target=${TINYGO_TARGET} -o output.bin main.go",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "List Serial Ports",
            "type": "shell",
            "command": "ls -la /dev/tty*",
            "problemMatcher": []
        },
        {
            "label": "TinyGo Flash",
            "type": "shell",
            "command": "source .env && tinygo flash -target=${TINYGO_TARGET} -port=/dev/${input:serialPort} main.go",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": ["List Serial Ports"]
        },
        {
            "label": "TinyGo Monitor",
            "type": "shell",
            "command": "source .env && tinygo monitor -target=${TINYGO_TARGET} -port=/dev/${input:serialPort}",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "serialPort",
            "type": "promptString",
            "description": "Serial port for your ESP32 (without /dev/ prefix)",
            "default": "ttyUSB0"
        }
    ]
}